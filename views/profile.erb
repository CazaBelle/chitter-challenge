<h2> Welcome to Chitter, <%= @user.firstname.capitalize! %>!</h2>

<h3>Your Details</h3>
<ul>
  <li>Name: <%= @user.firstname %> <%= @user.surname %></li>
  <li>Handle: <%= @user.username %></li>
  <li>Email: <%= @user.email %></li>
</ul>

<form action="/peep/<%= @user.id %>" method='get'>
  <input type='submit' value='PEEP' >
</form>

<form action="/sessions" method="post">
   <input type="hidden" name="_method" value="delete">
   <input type="submit" value="Log out">
 </form>


